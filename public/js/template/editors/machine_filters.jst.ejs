<div class="scrollable">
  <table class="table table-bordered index-table table-condensed">
    <thead>
      <tr>
        <th class="id">ID</th>
        <th class="protocol">Protocol</th>
        <th class="port">Port</th>
        <th class="delete" rowspan="2">Delete</th>
      </tr>
      <tr>
        <th class="direction">Direction</th>
        <th class="opponent">Src/Dest</th>
        <th class="rule">RuleAction</th>
      </tr>
    </thead>
    <tbody>
      <%
        var filters = get('filters');
        for(var i = 0; i < filters.length; i++) {
          var filter = filters[i];
      %>
      <tr>
        <td class="id">
          <div class="wrapper">
            <div class="stretchable">
              <div class="content">
                <select name="id">
                  <option></option>
                  <% for(var j = 0; j < this.filters.length; j++) { %>
                  <option value="<%- this.filters[j].id %>"><%- this.filters[j].id %></option>
                  <% } %>
                </select>
                <input type="text" name="id" value="<%- filter.id %>" placeholder="ID">
              </div>
            </div>
            <span class="toggle-id button glyphicon glyphicon-list"></span>
          </div>
        </td>
        <td class="protocol">
          <select name="protocol">
            <option></option>
            <option><%- App.Components.MachineFilters.ProtocolType.tcp %></option>
            <option><%- App.Components.MachineFilters.ProtocolType.udp %></option>
            <option><%- App.Components.MachineFilters.ProtocolType.icmp %></option>
          </select>
        </td>
        <td class="port"><input type="text" name="port" value="<%- filter.port %>" placeholder="Port"></td>
        <td class="delete" rowspan="2"><span class="button glyphicon glyphicon-remove"></span></td>
      </tr>
      <tr>
        <td class="direction">
          <select name="direction">
            <option></option>
            <option><%- App.Components.MachineFilters.DirectionType.ingress %></option>
            <option><%- App.Components.MachineFilters.DirectionType.egress %></option>
           </select>
        </td>
        <td class="opponent">
          <select name="opponent">
            <option></option>
            <option value="<%- App.Components.MachineFilters.RoutingKeywordsType.all %>"><%- App.Components.MachineFilters.RoutingKeywordsType.all %></option>
            <% for(var j = 0; j < this.opponent.length; j++) { %>
            <option value="<%- this.opponent[j].value %>"><%- this.opponent[j].text %></option>
            <% } %>
          </select>
        </td>
        <td class="rule">
          <select name="rule">
            <option></option>
            <option><%- App.Components.MachineFilters.RuleActionType.allow %></option>
            <option><%- App.Components.MachineFilters.RuleActionType.deny %></option>
          </select>
        </td>
      </tr>
      <% } %>

      <% if(!this.options.readonly) { %>
      <%= this.partial('editors/_machine_filters_new') %>
      <% } %>
    </tbody>
  </table>
</div>

